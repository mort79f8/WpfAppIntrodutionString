<Window x:Class="WpfAppIntrodutionString.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppIntrodutionString"
        mc:Ignorable="d"
        Title="Opgave 1 WPF-IntroduktionString" Height="750" Width="1200">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region buttons-->
        <Button x:Name="opgave11"
                Grid.Column="0"
                Grid.Row="9"
                Margin="60 10"
                Content="Opgave 1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Click="opgave11_Click" />

        <Button x:Name="opgave12"
                Grid.Column="1"
                Grid.Row="9"
                Margin="60 10"
                Content="Opgave 2"
