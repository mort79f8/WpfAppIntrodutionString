                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch" />

        <!--#endregion-->
        
        <!--#region Textboxes-->

        <TextBox x:Name="textboxLeft"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Grid.Row="0"
                 Grid.RowSpan="9"
                 Margin="10"/>

        <TextBox x:Name="textboxRight"
                 Grid.Column="2"
                 Grid.ColumnSpan="2"
                 Grid.Row="0"
                 Grid.RowSpan="9"
                 Margin="10" />


        <TextBox x:Name="textboxBottom"
                 Grid.Column="0"
                 Grid.Row="11"
                 Margin="60 10" />
        <!--#endregion-->
    </Grid>
</Window>
